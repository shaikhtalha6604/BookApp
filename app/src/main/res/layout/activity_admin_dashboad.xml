                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/add_book" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

